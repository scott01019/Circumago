<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/google_play_widgets_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:gravity="center_horizontal|bottom"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/games_achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginStart="@dimen/games_icons_margin"
        android:layout_marginEnd="@dimen/games_icons_margin"
        android:src="@mipmap/games_achievements_grey"/>

    <ImageView
        android:id="@+id/games_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginStart="@dimen/games_icons_margin"
        android:layout_marginEnd="@dimen/games_icons_margin"
        android:src="@mipmap/games_controller_grey"/>

    <ImageView
        android:id="@+id/games_leaderboards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginStart="@dimen/games_icons_margin"
        android:layout_marginEnd="@dimen/games_icons_margin"
        android:src="@mipmap/games_leaderboards_grey"/>

</LinearLayout>